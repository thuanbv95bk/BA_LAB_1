{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "require-jsdoc": "off",
    "indent": ["error", 4],
    "max-len": "off",
    "arrow-parens": "off",
    "operator-linebreak": ["error", "before"],
    "padded-blocks": "off",
    "object-curly-spacing": "off",
    "comma-dangle": "off",
    "new-cap": "off",
    "brace-style": "off",
    "one-var": "off",
    "curly": ["error", "multi-line"],
    "guard-for-in": "off",
    "no-invalid-this": "off",
    "no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "camelcase": ["error", { "properties": "always" }]
  }
}
